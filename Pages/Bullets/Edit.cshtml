@page "{id}"
@model EditModel

<h3>Update Bullet</h3>
<form class="form" method="POST">
    <div class="form-group "><label>Name:</label><input class="form-control" asp-for="Bullet.Name" /></div>
    <div class="form-group "><label>Brand:</label><input class="form-control"  asp-for="Bullet.Brand"></div>
    <div class="form-group "><label>Weight:</label><input class="form-control" asp-for="Bullet.Weight"></div>
    <div class="form-group "><label>Calibur:</label><input class="form-control" asp-for="Bullet.Calibur"></div>
    <input asp-for="Bullet.ID" class="hidden">
    <button type="submit" class="btn btn-default btn-lrg">
        <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
    </button>
</form>