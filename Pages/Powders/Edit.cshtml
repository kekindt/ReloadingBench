@page "{id}"
@model EditModel

<h3>Update Powder</h3>
<form class="form" method="POST">
    <div class="form-group "><label>Brand:</label><input class="form-control"  asp-for="Powder.Brand"></div>
    <div class="form-group "><label>Name:</label><input class="form-control" asp-for="Powder.Name"></div>
    <input asp-for="Powder.ID" class="hidden">
    <button type="submit" class="btn btn-default btn-lrg">
        <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
    </button>
</form>